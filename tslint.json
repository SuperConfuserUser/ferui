{
  "extends": ["tslint-etc", "tslint-config-prettier"],
  "rulesDirectory": [
    "./node_modules/codelyzer",
    "./node_modules/tslint-defocus/dist",
    "./tests/tslint/dist",
    "tslint-plugin-prettier"
  ],
  "rules": {
    // Activate prettier rules
    "prettier": true,
    // Angular specifics
    // Recommended Angular rules (https://angular.io/guide/styleguide)
    "prefer-output-readonly": true,
    "template-conditional-complexity": [true, 4],
    "contextual-lifecycle": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "no-attribute-decorator": true,
    "no-forward-ref": true,
    "no-lifecycle-call": true,
    "no-pipe-impure": true,
    "no-conflicting-lifecycle": true,
    "no-output-native": true,
    "no-queries-metadata-property": true,
    // Custom Angular rules for FerUI
    "component-selector": [true, "element", "fui", "kebab-case"],
    "directive-selector": [true, "attribute", "fui", "camelCase"],
    "component-class-suffix": [true, "Component"],
    "directive-class-suffix": [true, "Directive"],
    "prefer-inline-decorator": false,
    "template-cyclomatic-complexity": false,
    "template-i18n": false,
    "template-use-track-by-function": false,
    "use-component-selector": false,
    "no-unused-css": false,
    "no-input-rename": false,
    "no-output-on-prefix": false,
    "no-output-rename": false,
    ////////////////////
    "no-inferrable-types": false,
    "no-arg": true,
    "no-barrel-imports": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-namespace": [true, "allow-declarations"],
    "no-invalid-this": false,
    "no-object-literal-type-assertion": true,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-this-assignment": [true, { "allow-destructuring": true }],
    "no-unused-expression": true,
    "no-unused-declaration": true,
    "no-duplicate-imports": true,
    "no-var-keyword": true,
    "no-implicit-dependencies": false,
    "no-var-requires": true,
    "class-name": true,
    "curly": true,
    "defocus": true,
    "file-header": false,
    "forin": true,
    "jsdoc-format": true,
    "label-position": true,
    "member-access": false,
    "prefer-const": true,
    "prefer-for-of": true,
    "quotemark": false,
    "radix": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check"],
    "variable-name": [true, "check-format", "allow-leading-underscore", "ban-keywords"],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "protected-static-field",
          "protected-instance-field",
          "private-static-field",
          "private-instance-field",
          "public-constructor",
          "protected-constructor",
          "private-constructor",
          "public-instance-method",
          "public-static-method",
          "protected-instance-method",
          "protected-static-method",
          "private-instance-method",
          "private-static-method"
        ]
      }
    ]
  }
}
